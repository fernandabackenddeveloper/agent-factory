{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["query", "top_k"],
  "properties": {
    "query": { "type": "string" },
    "tags": { "type": "array", "items": { "type": "string" } },
    "top_k": { "type": "integer", "minimum": 1, "maximum": 50 },
    "min_score": { "type": "number", "minimum": 0 }
  }
}
